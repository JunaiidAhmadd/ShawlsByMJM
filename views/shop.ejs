<%- include('partials/header') %>

<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Women Winter and Summer Shawls</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <span>Women Winter and Summer Shawls</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__left">
                                    <p>Showing 1â€“12 of 126 results</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right">
                                    <p>Sort by Price:</p>
                                    <select>
                                        <option value="">Low To High</option>
                                        <option value="">$0 - $55</option>
                                        <option value="">$55 - $100</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <% if (products && products.length > 0) { %>
                            <% products.forEach(product => { %>
                                <div class="col-lg-4 col-md-6 col-sm-6 product__item" data-id="<%= product._id %>">
                            <div class="product__item">
                                        <div class="product__item__pic set-bg" data-setbg="<%= product.images && product.images.length > 0 ? product.images[0] : '/img/product/product-1.jpg' %>">
                                            <% if (product.salePrice && product.salePrice > 0) { %>
                                    <span class="label">Sale</span>
                                            <% } %>
                                    <ul class="product__hover">
                                        <li><a href="#"><img src="/img/icon/heart.png" alt=""></a></li>
                                        <li><a href="#"><img src="/img/icon/compare.png" alt=""> <span>Compare</span></a>
                                        </li>
                                                <li><a href="/shop-details/<%= product._id %>"><img src="/img/icon/search.png" alt=""></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                            <h6>
                                                <a href="/shop-details/<%= product._id %>"><%= product.name || 'Product Name' %></a>
                                            </h6>
                                            <a href="#" class="add-cart add-to-cart" 
                                               data-id="<%= product._id %>" 
                                               data-name="<%= product.name || 'Product Name' %>" 
                                               data-price="<%= product.salePrice && product.salePrice > 0 ? product.salePrice : product.price %>" 
                                               data-image="<%= product.images && product.images.length > 0 ? product.images[0] : '/img/product/product-1.jpg' %>">
                                               + Add To Cart
                                            </a>
                                    <div class="rating">
                                                <% for (let i = 0; i < Math.floor(product.rating); i++) { %>
                                        <i class="fa fa-star"></i>
                                                <% } %>
                                                <% if (product.rating % 1 != 0) { %>
                                                    <i class="fa fa-star-half-o"></i>
                                                <% } %>
                                                <% for (let i = 0; i < 5 - Math.ceil(product.rating); i++) { %>
                                        <i class="fa fa-star-o"></i>
                                                <% } %>
                                    </div>
                                            <% if (product.salePrice && product.salePrice > 0) { %>
                                                <h5 class="product__price">$<%= product.salePrice.toFixed(2) %> <span>$<%= product.price.toFixed(2) %></span></h5>
                                            <% } else { %>
                                                <h5 class="product__price">$<%= product.price.toFixed(2) %></h5>
                                            <% } %>
                                    <div class="product__color__select">
                                                <% if (product.colors && product.colors.length > 0) { %>
                                                    <% product.colors.forEach((color, index) => { %>
                                                        <label class="<%= index === 0 ? 'active' : '' %>" for="pc-<%= product._id %>-<%= index %>">
                                                            <input type="radio" id="pc-<%= product._id %>-<%= index %>">
                                        </label>
                                                    <% }); %>
                                                <% } %>
                            </div>
                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-lg-12">
                                <div class="alert alert-info text-center">
                                    <p>No products found.</p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product__pagination">
                                <a class="active" href="#">1</a>
                                <a href="#">2</a>
                                <a href="#">3</a>
                                <span>...</span>
                                <a href="#">21</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Section End -->

<%- include('partials/footer') %>
<script src="/js/cart.js"></script>