<%- include('partials/header') %>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Order Confirmation</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Home</a>
                        <a href="/shop">Shop</a>
                        <a href="/checkout">Checkout</a>
                        <span>Thank You</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Thank You Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="checkout__order thank-you-card">
                    <div class="text-center mb-5">
                        <i class="fa fa-check-circle text-success" style="font-size: 5rem;"></i>
                        <h2 class="mt-4">Thank You for Your Order!</h2>
                        <p class="mb-4">Your order has been placed successfully and is being processed.</p>
                        
                        <% if (typeof orderId !== 'undefined') { %>
                            <div class="order-info mt-4">
                                <h5>Order Number: <span class="text-primary">#<%= orderId %></span></h5>
                                <p>A confirmation email has been sent to your email address.</p>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="text-center mt-5">
                        <a href="/shop" class="primary-btn">Continue Shopping</a>
                        <% if (typeof orderId !== 'undefined') { %>
                            <a href="/account/orders/<%= orderId %>" class="site-btn mt-2 mt-md-0 ml-md-3">View Order Details</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Thank You Section End -->

<%- include('partials/footer') %> 